<div class="signuppage">
<div class="container">
	<div class="row login-form">
		<div class="col-md-4 col-sm-6 col-sm-offset-3 col-md-offset-4 well well-lg form-fx">
			
			<div class="signup_form">Signup now!</div>
			
			<%= form_for :user, url: users_path do |f| %>
				<%= f.text_field :username, class:"form-control", :placeholder => "Username" %><br>
			  <%= f.email_field :email, class:"form-control", :placeholder => "Email" %><br>
			  <%= f.password_field :password, placeholder: "Password", class: "form-control" %><br>
			<%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control" %><br>
		
			<%= f.submit "Submit", class: "btn btn-primary" %>

			<% end %>
		</div>
	</div>
</div>
</div>