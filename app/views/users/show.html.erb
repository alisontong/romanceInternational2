<div class="container">
		<div class="row">
			<br>
			<!-- Profile -->
			<div class="col-md-6 col-md-offset-3 profile-box">	
				<legend>Profile</legend>
               
                <h2>Name:<%= @user.name %></h2>
				<p>Username:<%= @user.username %><br></p>
				<p>Email:<%= @user.email %></p>
				
				<p><%= @user.profession %></p>
				<p><%= @user.age %></p> 
				<p><%= @user.gender %></p> 
				<p><%= @user.height %></p>
				<p><%= @user.education %></p>
				<p><%= @user.country %></p>
				<p><%= @user.city.name %></p>
				<p><%= @user.number_of_children %></p>
				<p><%= @user.bio %></p>
				<div><img src="<%= @user.image_url %>" id="image2"></div>

				<br>
		       
			</div>
