<div class="allprofile">
 <div class="container">
 	<div class="row">
	<div class="col-xs-3 first">
		<div class="thumbnail">
	     <% count = 1 %>
	     <% @users.each do |user| %>
		  <% if count % 4 == 1 %>
			<h3><%= user.username %></h3>
				<p><%= user.age %></p>
				<p><%= user.gender %></p> 
				<div><img src="<%= user.image_url %>" id="image"></div>
